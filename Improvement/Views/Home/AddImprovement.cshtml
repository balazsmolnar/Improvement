
    <form name="addImprovement" ng-controller="LandingPageController" class="form-horizontal " role="form">
        <fieldset>
            <legend>Add improvement</legend>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="title">Title:</label>
                <div class="col-sm-8">
                    @Html.TextBox("title", "", new { ng_model = "formtitle", ng_model_options = "{ updateOn: 'blur' }", placeholder = "Enter title", @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label " for="description">Description:</label>
                <div class="col-sm-8">
                    @Html.TextArea("description", "", 10, 20, new { ng_model = "formdescription", placeholder = "Enter description", @class = "form-control" })
                </div>
            </div>
        </fieldset>
        <br />
        <input type="submit" ng-click="submitForm()" value="Save" class="col-sm-offset-2"/>
</form>
